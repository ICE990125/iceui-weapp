<!-- 防止 fixed 元素遮挡下方元素, 在外层套一个 view -->
<view
  class="nav-bar__occupy"
  style="height: {{occupy ? statusBarHeight + navHeight : 0}}px;"
>
  <view
    class="nav-bar__container {{fixed? 'fixed' : ''}} {{blur ? 'blur' : ''}}"
    style="padding-top: {{ statusBarHeight }}px; color: {{color}}; background: {{backgroundColor}};"
  >
    <view
      class="nav-bar"
      style="height: {{navHeight}}px; width: {{navWidth}}px;"
    >
      <i-loading
        wx:if="{{loading}}"
        type="normal"
        size="20"
        class="i-loading-class"
      ></i-loading>

      <i-icon
        wx:elif="{{leftIcon}}"
        icon="{{leftIcon}}"
        class="i-icon-class"
        bindtap="click"
        size="20"
      ></i-icon>

      <i-header style="width: {{navWidth - 40}}px;" title="{{title}}" sub="{{sub}}"></i-header>
    </view>
  </view>
</view>
